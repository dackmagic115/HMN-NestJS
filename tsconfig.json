{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "target": "es6",
    "allowJs": true,
    "composite": true,
    "strict": true,
    "sourceMap": true,
    "checkJs": true,
    "outDir": "dist",
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "test", "**/*spec.ts", "dist"]
}
